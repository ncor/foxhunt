{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "rules": {
            "style": {
                "noNonNullAssertion": "off"
            },
            "a11y": {
                "useKeyWithClickEvents": "off"
            }
        }
    }
}
